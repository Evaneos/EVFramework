{
    "name": "evaneos/evframework",
    "description": "Evaneos Framework stack with glue",
    "type": "library",
    "authors": [
        {
            "name": "Evaneos",
            "email": "dev@evaneos.com",
            "homepage": "http://www.evaneos.com",
            "role": "Admin"
        }
    ],
    "autoload": {
        "psr-4": {
            "EVFramework\\": "src/"
        },
        "files" : [
            "src/Translation/t.function.php"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:Evaneos/dic-it.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:Evaneos/translations.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:Evaneos/trolamine.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:Evaneos/berthe.git"
        }
    ],
    "config": {
        "bin-dir": "bin/",
        "platform": {
            "php": "5.5.30"
        }
    },
    "require": {
        "evaneos/translations": "~2.0",
        "evaneos/pyrite": "~4.0",
        "evaneos/trolamine": "~2.0",
        "evaneos/berthe" : "~5.0",
        "monolog/monolog": "^1.13",
        "league/fractal": "~0.7.0",
        "twig/twig": "~1.18",
        "asm89/stack-cors": "~0.2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.5"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.x-dev"
        }
    }
}
